{
  "name": "the-chain-server",
  "version": "0.1.0",
  "description": "The BlockChain Project's Server",
  "module": "dist/index.js",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts --outfile dist/index.js",
    "start": "bun run dist/index.js",
    "test": "vitest --ui",
    "lint": "oxlint src",
    "format": "oxfmt src",
    "drizzle:generate": "drizzle-kit generate",
    "drizzle:migrate": "drizzle-kit migrate"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.0",
    "drizzle-orm": "^0.45.0",
    "elysia": "^1.4.25"
  },
  "devDependencies": {
    "@vitest/ui": "^4.0.15",
    "bun-types": "^1.3.5",
    "drizzle-kit": "^0.31.5",
    "oxfmt": "^0.32.0",
    "oxlint": "^1.47.0",
    "typescript": "~5.9.3",
    "vitest": "^4.0.15",
    "zod": "^4.3.5"
  },
  "private": true,
  "license": "WTFPL"
}
