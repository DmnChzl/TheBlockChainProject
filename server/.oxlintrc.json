{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "env": {
    "es2022": true,
    "node": true
  },
  "rules": {
    "no-console": "warn",
    "no-unused-vars": ["warn", {
      "argsIgnorePattern": "^_",
      "varsIgnorePattern": "^_"
    }]
  },
  "overrides": [
    {
      "files": ["**/*.test.*", "**/*.test.*"],
      "rules": {
        "no-console": "off",
      }
    }
  ],
  "ignorePatterns": ["dist/", "build/", "coverage/", "node_modules/"]
}